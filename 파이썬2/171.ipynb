   "source": [
    "class Solution:\n",
    "    def numberOfMatches(self, n):\n",
    "        res = 0\n",
    "        while n != 1:\n",
    "            if n % 2 == 0:\n",
    "                res += n // 2\n",
    "                n //= 2\n",
    "            else:\n",
    "                res += (n - 1) // 2\n",
    "                n = ((n - 1) // 2) + 1\n",
    "        return res"
   ]
